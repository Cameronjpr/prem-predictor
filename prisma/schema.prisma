generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Vote {
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  player   Player @relation(fields: [playerId], references: [uuid])
  playerId String

  fixture Int
  picked  Int

  @@id([playerId, fixture])
  @@unique([playerId, fixture], name: "playerFixtureUnique")
  @@index([playerId])
}

model Player {
  uuid      String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  username  String
  votes     Vote[]
}
